<%- include('./partials/header.ejs', { title }) %>

<div class="container my-5">
    <div class="row">
        <h1><%= title %></h1>
    </div>
    <div class="d-flex gap-4 my-3">
        <button type="button" class="btn btn-info fs-5">
            Cash only <span class="badge text-bg-secondary">4</span>
        </button>
        <button type="button" class="btn btn-info fs-5">
            Debit only <span class="badge text-bg-secondary">2</span>
        </button>        
        <button type="button" class="btn btn-info fs-5">
            Online ordering <span class="badge text-bg-secondary">1</span>
        </button>
        <button type="button" class="btn btn-info fs-5">
            Corporate lunches <span class="badge text-bg-secondary">2</span>
        </button>
        <button type="button" class="btn btn-info fs-5">
            Vegetarian <span class="badge text-bg-secondary">3</span>
        </button>
    </div>
</div>

<div class="container-fluid">
    <div class="d-flex p-5 flex-wrap justify-content-evenly">
      <% trucks.map(truck => { %> 
        <%- include('./components/truck.ejs', { truck }) %>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs', { title }) %>