<%- include('./partials/header.ejs', { title }) %>

<div class="container my-3">
    <div class="row">
        <h1><%= activeTag ?? title %></h1>
    </div>
    <div class="d-flex gap-4 my-3">
        <% tags.map(tag => { %> 
            <a href="/tags/<%= tag._id %>" class="btn <%= activeTag === tag._id ? 'btn-success' : 'btn-info' %> fs-5">
                <%= tag._id %> <span class="badge text-bg-secondary"><%= tag.count %></span>
            </a>
        <% }) %>
    </div>
</div>

<div class="container">
    <div class="d-flex flex-column p-5 flex-wrap align-content-center">
      <% trucks.map(truck => { %> 
        <%- include('./components/slimtruck.ejs', { truck }) %>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs', { title }) %>